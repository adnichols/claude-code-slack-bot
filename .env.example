# Slack App Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token
SLACK_SIGNING_SECRET=your-signing-secret

# Claude Code Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key

# Working Directory Configuration
# Base directory for relative paths (e.g., /Users/username/Code/)
# If set, you can use "cwd project-name" instead of full paths
BASE_DIRECTORY=/Users/username/Code/

# Optional: Use third-party providers
# CLAUDE_CODE_USE_BEDROCK=1
# CLAUDE_CODE_USE_VERTEX=1

# Permission System Configuration
# Default approval scope: 'tool' (broad), 'action' (medium), or 'command' (narrow)
PERMISSION_DEFAULT_SCOPE=action

# Show detailed parameters in approval requests (default: true)
# PERMISSION_SHOW_DETAILS=false

# Allow tool-level approvals (broader scope, longer persistence)
# PERMISSION_ALLOW_TOOL_LEVEL=true

# Allow command-level approvals (narrower scope, shorter persistence)
# PERMISSION_ALLOW_COMMAND_LEVEL=true

# Auto-approve low-risk operations without user interaction
# PERMISSION_AUTO_APPROVE_LOW_RISK=true

# Development
# DEBUG=true